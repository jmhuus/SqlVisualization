# The starting directory here is sql-parser because
# that's what was specified in the WORKSPACE
# new_local_repository rule. Therefore, subsequent
# references will start assuming a root directory
# of /sql-parser.
cc_library(
    name = "sql-parser",
    srcs = glob(
        [
            "src/*.cpp",
            "src/sql/*.cpp",
            "src/parser/*.cpp",
            "src/util/*.cpp",
        ],
        exclude = [
            "src/parser/conflict_test.cpp",
        ],
    ),
    hdrs = glob(
        [
            "src/*.h",
            "src/sql/*.h",
            "src/parser/*.h",
            "src/util/*.h",
        ]
    ),
    visibility = ["//visibility:public"],
)
